<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keylogger POC\n\nTo test this:\n1. Click the button below to open Settings.\n2. Enable 'Keylogger POC Keyboard'.\n3. Switch to it when typing anywhere.\n4. Monitor Logcat."
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnEnableKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Keyboard Settings" />

</LinearLayout>
